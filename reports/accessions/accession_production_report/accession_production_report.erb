<div class="titlepage">
  <div class="title"><%= h @report.title %></div>

  <dl>
    <dt><%= t('accessioned_between') %></dt>
    <dd><%= format_date(@report.from_date) %> &amp; <%= format_date(@report.to_date) %></dd>

    <dt><%= t('total_extent') %></dt>
    <dd><%= format_number(@report.total_extent) %></dd>

    <dt><%= t('number_selected') %></dt>
    <dd><%= h @report.total_count %></dd>

    <dt><%= t('total_cataloged_extent') %></dt>
    <dd><%= format_number(@report.total_extent_of_cataloged) %></dd>

    <dt><%= t('total_processed_extent') %></dt>
    <dd><%= format_number(@report.total_extent_of_processed) %></dd>
  </dl>

</div>
