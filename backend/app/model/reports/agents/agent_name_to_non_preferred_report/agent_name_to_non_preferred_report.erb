<div class="titlepage">
  <div class="title"><%= h @report.title %></div>

  <dl>
    <dt><%= t('total_count') %></dt>
    <dd><%= h @report.total_count %></dd>
  </dl>
</div>

<% @report.each do |name| %>
  <div class="report-record">
    <div class="identifier"><%= h name.fetch('sortName') %></div>

    <dl>
      <dt><%= t('name_type') %></dt>
      <dd><%= h name.fetch('nameType') %></dd>
      <dt><%= t('source') %></dt>
      <dd><%= h name.fetch('nameSource') %></dd>
    </dl>

    <%= subreport_section(t('non_preferred_names'), AgentNameNonPreferredSubreport, name) %>
  </div>
<% end %>
