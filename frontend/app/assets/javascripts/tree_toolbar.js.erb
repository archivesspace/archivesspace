                    });

                } else {
                    $(btn).text('<%= I18n.t('actions.expand_tree_mode_on') %>');
                    $('.expandme').removeAttr('disabled').removeAttr('aria-disabled').removeClass('disabled');
                    $(btn).blur();
                }

            },
