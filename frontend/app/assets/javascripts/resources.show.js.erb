$(function() {

  // if finding aid is empty, then we can hide it
  $(document).bind("loadedrecordform.aspace", function(event, $container) {
    if ($container.has("#finding_aid")) {
      if ($.trim($("#finding_aid .subrecord-form-fields", $container).html()).length === 0) {
        $("#finding_aid").remove();
        $("a[href='#finding_aid']", "#archivesSpaceSidebar").remove();
      }
    }
  });

});
