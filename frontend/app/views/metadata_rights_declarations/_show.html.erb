<%
   section_id = "metadata_rights_declaration" if section_id.blank?
   section_title = "Metadata Rights Declarations" if section_title.blank?
%>

<section id="<%= section_id %>">
  <h3><%= section_title %></h3>
  <div class="panel-group details" id="<%= section_id %>_accordion">
    <% metadata_rights_declarations.each_with_index do | metadata_rights_declaration, index | %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="row accordion-toggle collapsed" data-toggle="collapse" data-parent="#<%= section_id %>_accordion" href="#<%= section_id %>_metadata_rights_declaration_<%= index %>">
            <div class="col-md-1">
              <span class="glyphicon"></span>
            </div>
            <div class="col-md-6">
              <%= I18n.t("enumerations.metadata_rights_statement.#{metadata_rights_declaration['rights_statement']}", :default => metadata_rights_declaration['rights_statement']) %>
            </div>
          </div>
        </div>
        <div id="<%= section_id %>_metadata_rights_declaration_<%= index %>" class="panel-collapse collapse">
          <%= render_aspace_partial :partial => "metadata_rights_declarations/show_fields", :locals => { :metadata_rights_declaration => metadata_rights_declaration } %>
        </div>
      </div>
    <% end %>
  </div>
</section>
