<%= setup_context :object => @event, :title => @event.id %>

<%= form_for @event, :as => "event", :url => {:action => :update}, :html => {:class => 'form-horizontal'} do |f| %>
  <%= form_context :event, @event do |form| %>
    <div class="row-fluid">
      <div class="span3">
        <%= render :partial => "sidebar" %>
      </div>
      <div class="span9">
        <div class="record-pane">
          <h2><%= I18n.t("event._singular") %> <%= @event.id %>  <span class="label label-info"><%= I18n.t("event._singular") %></span></h2>

          <%= render :partial => "events/form", :locals => {:form => form} %>
          <div class="form-actions">
            <button type="submit" class="btn btn-primary"><%= I18n.t("actions.save_prefix") %> <%= I18n.t("event._singular") %></button>
            <%= link_to I18n.t("actions.cancel"), :back, :class => "btn btn-cancel" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
