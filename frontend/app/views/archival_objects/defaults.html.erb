<%= setup_context :object => @archival_object, :type => :resource, :title => t("actions.defaults") %>

<div id="object_container">
  <%= form_for @archival_object, :as => "archival_object", :url => {:action => :update_defaults}, :html => {:class => 'form-horizontal aspace-record-form', :id => "resource_form"} do |f| %>
    <%= form_context :archival_object, @archival_object do |form| %>
      <div class="row">
         <div class="col-md-3">
            <%= render_aspace_partial :partial => "archival_objects/sidebar" %>
         </div> <!-- col-md-3 -->
         <div class="col-md-9">
           <%= render_aspace_partial :partial => "shared/toolbar_new_records" %>
           <div class="record-pane">

             <%= render_aspace_partial :partial => "archival_objects/form_container", :locals => {:form => form} %>

             <div class="form-actions">
                <button type="submit" class="btn btn-primary"><%= t("actions.save_prefix") %> <%= t("resource._singular") %></button>
                <%= link_to t("actions.cancel"), :back, :class => "btn btn-cancel btn-default" %>
             </div>
           </div>
         </div>
      </div>
    <% end %>
  <% end %>
</div>
