<%
   if form.obj['ref'].blank?
     selected_json = "{}"
   else
     selected = form.obj['_resolved'].clone
     selected['uri'] ||= form.obj['ref']
     selected_json =  selected.to_json
   end

   linkable_types = defined?(allowed_types) ? allowed_types : ["agent"]
   creatable_types = defined?(allowed_types) ? allowed_types : ["agent_person", "agent_family", "agent_corporate_entity", "agent_software"]
%>
<div class="control-group">
  <label class="control-label"><%= defined?(linker_label) ? linker_label : I18n.t("agent._html.singular") %></label>
  <div class="controls">
    <div class="input-append linker-wrapper">
      <input type="text" class="linker"
             id="<%= form.id_for("ref") %>"
             data-label="<%= I18n.t("agent._html.singular") %>"
             data-label_plural="<%= I18n.t("agent._html.plural") %>"
             data-name="ref"
             data-path="<%= form.path %>"
             data-url="<%= url_for :controller => :search, :action => :do_search, :format => :json %>"
             data-selected="<%= selected_json %>"
             data-multiplicity="one"
             data-format_template="names[0].sort_name"
             data-types='<%= linkable_types.to_json %>'
      />
      <div class="btn-group pull-right">
        <a class="btn dropdown-toggle last" data-toggle="dropdown" href="javascript:void(0);"><span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li><a href="javascript:void(0);" class="linker-browse-btn"><%= I18n.t("actions.browse") %></a></li>
          <% if user_can?('update_agent_record') %>
            <li class="dropdown-submenu pull-left">
              <a href="javascript:void(0);"><%= I18n.t("actions.create") %></a>
              <ul class="dropdown-menu">
                <% creatable_types.each do |agent_type| %>
                <li><a href="javascript:void(0);" data-target="<%= url_for :controller => :agents, :action => :new, :type => agent_type.intern, :inline => true %>" class="linker-create-btn"><%= I18n.t("#{agent_type}._html.singular") %></a></li>
                <% end %>
              </ul>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
