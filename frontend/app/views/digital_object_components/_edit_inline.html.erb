<%= form_for @digital_object_component, :as => "digital_object_component", :url => {:action => :update, :id => @digital_object_component.id}, :html => {:class => 'form-horizontal aspace-record-form'}.merge(update_monitor_params(@digital_object_component)) do |f| %>
  <%= form_context :digital_object_component, @digital_object_component do |form| %>
    <div class="d-flex">
      <div class="col-md-3">
        <%= render_aspace_partial :partial => "sidebar" %>
      </div>
      <div class="col-md-9">
        <%= render_aspace_partial :partial => "toolbar" %>
        <div class="record-pane">
          <%= render_aspace_partial :partial => "digital_object_components/form_container", :locals => {:form => form} %>
          <div class="form-actions pl-0">
            <button type="submit" class="btn btn-primary"><%= t("digital_object_component._frontend.action.save") %></button>
            <%= link_to t("actions.cancel"), :back, :class => "btn btn-cancel btn-default" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
