<% define_template "accession_linked_agent" do |form| %>
  <div class="subrecord-form-fields">
    <%= form.label_and_select("role", form.options_for("role", JSONModel(:accession).schema["properties"]["linked_agents"]["items"]["properties"]["role"]["enum"])) %>
