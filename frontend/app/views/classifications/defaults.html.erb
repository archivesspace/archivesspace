<%= setup_context :object => @classification, :title => t("actions.defaults") %>

<%= form_for @classification, :as => "classification", :url => {:action => :update_defaults}, :html => {:class => 'form-horizontal aspace-record-form', :id => "classification_form"} do |f| %>
  <%= form_context :classification, @classification do |form| %>
    <div class="row">
       <div class="col-md-3">
          <%= render_aspace_partial :partial => "classifications/sidebar" %>
       </div> <!-- col-md-3 -->
       <div class="col-md-9">
         <%= render_aspace_partial :partial => "shared/toolbar_new_records" %>
         <div class="record-pane">

           <%= render_aspace_partial :partial => "classifications/form_container", :locals => {:form => form} %>

           <div class="form-actions">
              <button type="submit" class="btn btn-primary"><%= t("actions.save_prefix") %> <%= t("classification._singular") %></button>
              <%= link_to t("actions.cancel"), :back, :class => "btn btn-cancel btn-default" %>
           </div>
         </div>
       </div>
    </div>
  <% end %>
<% end %>
