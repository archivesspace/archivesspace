<%= setup_context :title => I18n.t("classification._plural") %>

<%
   @show_multiselect_column = user_can?("delete_classification_record")
%>

<div class="row-fluid">
   <div class="span3">
     <%= render :partial => "search/filter" %>
   </div>
   <div class="span9">
     <% if user_can?('update_classification_record') %>
       <div class="row-fluid">
         <div class="span12">
           <div class="record-toolbar">
             <div class="pull-right">
               <%= link_to I18n.t("classification._frontend.action.create"), {:controller => :classifications, :action => :new}, :class => "btn btn-small" %>
               <% if user_can?("delete_classification_record") %>
                 <%= button_delete_multiple_action(:classifications) %>
               <% end %>
             </div>
           </div>
         </div>
       </div>
     <% end %>

     <div class="record-pane">
       <h2><%= I18n.t("classification._plural") %></h2>

       <%= render :partial => "shared/flash_messages" %>

       <%= render :partial => "search/listing" %>
     </div>
   </div>
</div>
