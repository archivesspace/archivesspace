<% define_template "date_type_single", jsonmodel_definition(:date) do |form| %>
  <div class="inline-subform date-type-subform" data-date-type="single">
    <%= form.label_and_date "begin", {
      :field_opts => {
        :placeholder => "YYYY-MM-DD"
      }
    } %>
  </div>
<% end %>

