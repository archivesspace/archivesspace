<%
   section_id = "dates" if section_id.blank?
   section_title = I18n.t('date._plural') if section_title.blank?
%>

<section id="<%= section_id %>">
  <h3><%= section_title %></h3>
  <div class="panel-group details" id="<%= section_id %>_accordion">
    <% dates.each_with_index do | date, index | %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="row accordion-toggle collapsed" data-toggle="collapse" data-parent="#<%= section_id %>_accordion" href="#<%= section_id %>_date_<%= index %>">
            <div class="col-md-1">
              <span class="glyphicon"></span>
            </div>
            <div class="col-md-2">
              <%= I18n.t("enumerations.date_label.#{date['label']}", :default => date['label']) %>
            </div>
            <div class="col-md-6">
              <!--https://www.pivotaltracker.com/story/show/41527633 -->
              <% if date['expression'] %>
                <%= date['expression']%>
              <% elsif date['date_type'] === "single" %>
                <%= date['begin'] %>
              <% elsif date['date_type'] %>
                <%= date['begin'] %> &ndash; <%= date['end'] %>
              <% end %>
            </div>
            <div class="col-md-3">
              <% if date['certainty']%><%= I18n.t("enumerations.date_certainty.#{date['certainty']}", :default => date['certainty']) %><% end %>
            </div>
          </div>
        </div>
        <div id="<%= section_id %>_date_<%= index %>" class="panel-collapse collapse">
          <%= read_only_view(date) %>
        </div>
      </div>
    <% end %>
  </div>
</section>
