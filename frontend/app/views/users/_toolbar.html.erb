<div class="record-toolbar">
  <div class="pull-left save-changes">
    <button type="submit" class="btn btn-primary btn-sm">
      <% if @user.id %>
        <%= I18n.t("user._frontend.action.update_account") %>
      <% else %>
        <%= I18n.t("user._frontend.action.create_account") %>
      <% end %>
    </button>
  </div>
  <% if ['edit', 'update'].include?(controller.action_name) %>
    <div class="pull-left revert-changes">
      <%= link_to I18n.t("actions.revert"), {:controller => :users, :action => :edit, :id => @user.id}, :class => "btn btn-sm btn-default" %>
      <%= I18n.t("actions.toolbar_disabled_message") %>
    </div>
  <% end %>
  <div class="btn-toolbar pull-right">
    <% if @user.id && !@user.is_system_user && @user.username.downcase != current_user.downcase %>
      <div class="btn-group">
        <div class="btn btn-inline-form">
          <%= button_delete_action url_for(:controller => :users, :action => :delete, :id => @user.id), { :"data-title" => I18n.t("actions.delete_confirm_title", :title => @user.username) } %>
        </div>
      </div>
    <% end %>
  </div>
  <br style="clear:both" /> <!-- So dirty! -->
</div>

