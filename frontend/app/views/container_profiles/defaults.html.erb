<%= setup_context :object => @container_profile, :title => t("actions.defaults") %>

<%= form_for @container_profile, :as => "container_profile", :url => {:action => :update_defaults}, :html => {:class => 'form-horizontal aspace-record-form'} do |f| %>
  <%= form_context :container_profile, @container_profile do |form| %>
    <div class="d-flex">
      <div class="col-md-3">
        <%= render_aspace_partial :partial => "container_profiles/sidebar" %>
      </div>
      <div class="col-md-9">
        <div class="record-pane">
          <%= link_to_help :topic => "container_profile" %>
          <h2><%= I18n.t("default_values.form_title.container_profile") %>  <span class="label label-info badge"><%= I18n.t("container_profile._singular") %></span></h2>
          <br/>

          <%= render_aspace_partial :partial => "container_profiles/form", :locals => {:form => form} %>

          <div class="form-actions">
            <div class="btn-group">
              <button type="submit" class="btn btn-primary"><%= t("actions.save_prefix") %> <%= t("container_profile._singular") %></button>
            </div>
            <%= link_to t("actions.cancel"), :back, :class => "btn btn-cancel btn-default" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
