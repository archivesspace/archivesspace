<%
   section_id = "related_resources" if section_id.blank?
%>

<section id="<%= section_id %>" class="subrecord-form-dummy">
  <h3><%= t("related_resource._plural") %></h3>


  <div class="subrecord-form-container">
    <div class="subrecord-form-fields">
      <table class="table table-striped table-bordered table-condensed table-hover token-list">
        <thead>
          <tr>
            <td><%= t("resource.id_0") %></td>
            <td><%= t("resource.title") %></td>
          </tr>
        </thead>
        <tbody>
          <% related_resources.each_with_index do | resource, index | %>
            <tr>
              <td><%= (0..3).map{|i| resource["_resolved"]["id_#{i}"]}.compact.join("-") %></td>
              <td>
                <%= render_token :object => resource["_resolved"],
                                 :label => resource["_resolved"]["title"],
                                 :type => "resource",
                                 :uri => resource["ref"] %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</section>
