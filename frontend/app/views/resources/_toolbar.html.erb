<% if user_can?('update_archival_record') %>
  <div class="row-fluid">
    <div class="span12">
      <div class="record-toolbar">
        <div class="pull-right">
          <div class="btn-group">
            <%= link_to I18n.t("actions.edit"), {:controller => :resources, :action => :edit, :id => @resource.id, :anchor => "resource_#{@resource.id}"}, :class => "btn btn-small" %>
          </div>
          <div class="btn-group">
            <%= link_to I18n.t("actions.export_ead"), {:controller => :exports, :action => :download_ead, :id => @resource.id}, :class => "btn btn-small" %>
          </div>
          <div class="btn-group">
            <%= link_to I18n.t("actions.export_marc"), {:controller => :exports, :action => :download_marc, :id => @resource.id}, :class => "btn btn-small" %>
          </div>
          <div class="btn-group">
            <%= link_to I18n.t("actions.container_labels"), {:controller => :exports, :action => :container_labels, :id => @resource.id}, :class => "btn btn-small" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
