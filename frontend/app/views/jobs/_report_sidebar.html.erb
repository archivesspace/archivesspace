<%= render(:layout => '/shared/sidebar',
           :locals => {
                   :record_type => 'job',
                   :record => @job,
                   :suppress_basic_information => true,
                   :suppress_submit_buttons => true
           }) do |sidebar| %>


  <% reports.each do |report| %>
    <%= sidebar.render_for_view_and_edit(:subrecord_type => report, :property => :none, :anchor => report, :title => t("reports.#{report}.title")) %>
  <% end %>
<% end %>
