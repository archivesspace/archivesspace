<%
definitions = JSONModel(:assessment_attribute_definitions).find(nil)
global_ratings = definitions.definitions.select {|definition| definition['type'] == 'rating' && definition['global']}
%>

<select id="assessment_ratings_report_rating_selection" name="job[job_params][rating]">
  <% global_ratings.each do |rating| %>
    <option value="<%= rating['id'] %>"><%= I18n.t("assessment_attribute.#{rating['type']}.#{rating['label']}", :default => rating['label']) %></option>
  <% end %>
</select>

