<%
   section_id = "agent_sources" if section_id.blank?
   section_title = "Sources" if section_title.blank?
%>

<section id="<%= section_id %>">
  <h3><%= section_title %></h3>
  <div class="details my-3" id="<%= section_id %>_accordion">
    <% agent_sources.each_with_index do | agent_source, index | %>
      <div class="card mb-3">
        <div class="card-header panel-heading">
          <div class="row accordion-toggle collapsed" data-toggle="collapse" data-parent="#<%= section_id %>_accordion" href="#<%= section_id %>_agent_source_<%= index %>">
            <div class="col-md-1">
              <span class="glyphicon"></span>
            </div>
            <div class="col-md-6">
              <% if !agent_source["source_entry"].blank? %>
                <%= agent_source["source_entry"] %>
              <% else %>
                <%= t("agent_source._singular") %>
              <% end %>
            </div>
          </div>
        </div>
        <div id="<%= section_id %>_agent_source_<%= index %>" class="panel-collapse collapse">
          <%= render_aspace_partial :partial => "agent_sources/show_fields", :locals => { :agent_source => agent_source } %>
        </div>
      </div>
    <% end %>
  </div>
</section>
