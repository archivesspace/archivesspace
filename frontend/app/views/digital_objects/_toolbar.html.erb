<% if user_can?('update_archival_record') %>
  <div class="row-fluid">
    <div class="span12">
      <div class="record-toolbar">
        <div class="pull-right">
          <div class="btn-group">
            <%= link_to I18n.t("actions.edit"), {:controller => :digital_objects, :action => :edit, :id => @digital_object.id, :anchor => "digital_object_#{@digital_object.id}"}, :class => "btn btn-small" %>
          </div>
          <div class="btn-group">
            <%= link_to I18n.t("actions.export_mods"), {:controller => :exports, :action => :download_mods, :id => @digital_object.id}, :class => "btn btn-small" %>
          </div>
          <div class="btn-group">
            <%= link_to I18n.t("actions.export_mets"), {:controller => :exports, :action => :download_mets, :id => @digital_object.id}, :class => "btn btn-small" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
