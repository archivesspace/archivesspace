<%= form_for @digital_object, :as => "digital_object", :url => {:action => :update}, :html => {:class => 'form-horizontal'} do |f| %>
  <%= form_context :digital_object, @digital_object.to_hash(true) do |form| %>
    <div class="row-fluid">
      <div class="span3">
        <%= render :partial => "digital_objects/sidebar" %>
      </div>
      <div class="span9">
        <div class="record-pane">
          <h2>
            <%= @digital_object.title.blank? ? "#{I18n.t("actions.new_prefix")} #{I18n.t("digital_object._html.singular")}" : @digital_object.title %>  <span class="label label-info"><%= I18n.t("digital_object._html.singular") %></span>
          </h2>
          <%= render :partial => "digital_objects/form_container", :locals => {:form => form} %>
           <div class="form-actions">
              <button type="submit" class="btn btn-primary"><%= I18n.t("actions.save_prefix") %> <%= I18n.t("digital_object._html.singular") %></button>
              <%= link_to I18n.t("actions.cancel"), :back, :class => "btn btn-cancel" %>
           </div>
         </div>
      </div>
    </div>
  <% end %>
<% end %>
