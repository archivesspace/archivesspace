<%= setup_context :title => I18n.t("digital_object._plural") %>

<%
  @show_multiselect_column = user_can?("delete_archival_record")
%>

<div class="row-fluid">
  <div class="span3">
    <%= render :partial => "search/components_switch", :formats => [:html], :handlers => [:erb] %>
    <%= render :partial => "search/filter", :formats => [:html], :handlers => [:erb] %>
  </div>
  <div class="span9">
    <% if user_can?('update_archival_record') %>
      <div class="row-fluid">
        <div class="span12">
          <div class="record-toolbar">
            <div class="pull-right">
              <%= link_to I18n.t("digital_object._frontend.action.create"), {:controller => :digital_objects, :action => :new}, :class => "btn btn-small" %>
              <% if user_can?("delete_archival_record") %>
                <%= button_delete_multiple_action(:archival_records) %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="record-pane">
      <%= link_to_help :topic => "search" %>

      <h2><%= I18n.t("digital_object._plural") %></h2>

      <%= render :partial => "shared/flash_messages", :formats => [:html], :handlers => [:erb] %>

      <%= render :partial => "search/listing", :formats => [:html], :handlers => [:erb] %>
    </div>
  </div>
</div>
