<%= setup_context :object => @digital_object %>

<%= form_for @digital_object, :as => "digital_object", :url => {:action => :create}, :html => {:class => 'form-horizontal'} do |f| %>
  <%= form_context :digital_object, @digital_object do |form| %>
    <div class="row-fluid">
       <div class="span3">
          <%= render :partial => "digital_objects/sidebar" %>
       </div> <!-- span3 -->
      <div class="span9">
        <%= render :partial => "shared/toolbar_new_records" %>
        <div class="record-pane" id="object_container">
          <h2>
            <%= @digital_object.title.blank? ? I18n.t("digital_object._singular") : @digital_object.title %>
            <span class="label label-info"><%= I18n.t("digital_object._singular") %></span>
          </h2>

           <%= render :partial => "digital_objects/form_container", :locals => {:form => form} %>

           <div class="form-actions">
              <button type="submit" class="btn btn-primary"><%= I18n.t("actions.save_prefix") %> <%= I18n.t("digital_object._singular") %></button>
              <%= link_to I18n.t("actions.cancel"), :back, :class => "btn btn-cancel" %>
           </div>
         </div>
       </div>
    </div>
  <% end %>
<% end %>
