<%= setup_context :object => @group %>

<div class="row-fluid">
  <div class="span3"></div>

  <div class="span9">
    <div class="record-pane">
      <h2><%= I18n.t("actions.new_prefix") %> <%= I18n.t("group._singular") %> <span class="label label-info"><%= I18n.t("group._singular") %></span></h2>

      <%= form_for @group, :as => "group", :url => {:action => :create}, :html => {:class => 'form-horizontal aspace-record-form'} do |f| %>
        <%= form_context :group, @group do |form| %>
          <%= render :partial => "shared/form_messages", :formats => [:html], :handlers => [:erb], :locals => {:form => form} %>
          <%= form.label_and_textfield :group_code, :required => true %>
          <%= render :partial => "groups/form", :formats => [:html], :handlers => [:erb], :locals => {:form => form} %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
