<%= setup_context :title => I18n.t("group._plural") %>

<div class="row">
   <div class="col-md-3">
   </div>

  <div class="col-md-9">
    <div class="record-toolbar">
      <div class="btn-group pull-right">
        <%= link_to I18n.t("group._frontend.action.create"), {:controller => :groups, :action => :new}, :class => "btn btn-sm btn-default" %>
      </div>
      <br style="clear:both" /> <!-- So dirty! -->
    </div>

    <div class="record-pane">
      <%= link_to_help :topic => "repository_groups" %>

     <h2><%= I18n.t("group._plural") %></h2>

     <table class="table table-striped table-bordered table-condensed">
       <thead>
         <tr>
           <th>Group name</th>
           <th width="1px"><!-- actions --></th>
         </tr>
       </thead>
       <tbody>
         <% @groups.each do |group| %>
         <tr>
           <td><%= group.description %> <small>(<%= group.group_code %>)</small></td>
           <td>
             <%= link_to I18n.t("actions.edit"), {:controller => :groups, :action => :edit, :id => group.id}, :class => "btn btn-xs btn-primary" %>
           </td>
         </tr>
         <% end %>
       </tbody>
     </table>
    </div>
   </div>
</div>
