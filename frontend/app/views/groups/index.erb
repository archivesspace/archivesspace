<%= setup_context :title => I18n.t("group._html.plural") %>

<div class="row-fluid">
   <div class="span3">
   </div>

   <div class="span9 record-pane">
     <div class="btn-group">
       <%= link_to "Create Group", {:controller => :groups, :action => :new}, :class => "btn" %>
     </div>

     <h2>Groups</h2>

     <table class="table table-striped table-bordered table-condensed">
       <thead>
         <tr>
           <th>Group name</th>
           <th width="1px"><!-- actions --></th>
         </tr>
       </thead>
       <tbody>
         <% @groups['results'].each do |group| %>
         <tr>
           <td><%= group.description %> <small>(<%= group.group_code %>)</small></td>
           <td>
             <%= link_to "Edit", {:controller => :groups, :action => :edit, :id => group.id}, :class => "btn btn-mini" %>
           </td>
         </tr>
         <% end %>
       </tbody>
     </table>
   </div>
</div>
