<%= setup_context :object => @group, :title => (!@group.description.blank? ? @group.description : "#{t("actions.edit")} #{t("group._singular")}") %>

<%= form_for @group, :as => "group", :url => {:action => :update, :id => @group.id}, :html => {:class => 'form-horizontal aspace-record-form'}.merge(update_monitor_params(@group)) do |f| %>

<div class="d-flex">
  <div class="col-12">
    <%= render_aspace_partial :partial => "toolbar" %>

    <div class="record-pane">
      <h2><%= !@group.description.blank? ? @group.description : "#{t("actions.edit")} #{t("group._singular")}" %> <span class="label label-info badge"><%= t("group._singular") %></span></h2>

      <%= form_context :group, @group do |form| %>
        <%= render_aspace_partial :partial => "shared/form_messages", :locals => {:form => form} %>
        <%= render_aspace_partial :partial => "groups/form", :locals => {:form => form} %>
      <% end %>
    </div>
  </div>
</div>
<% end %>

