<%= setup_context :object => JSONModel(:repository).new(@repository['repository']), :title => @repository.id %>

<%= form_for @repository, :as => "repository", :url => {:action => :update}, :html => {:class => 'form-horizontal aspace-record-form'} do |f| %>
  <%= form_context :repository, @repository do |form| %>
    <div class="row-fluid">
      <div class="span3">
        <%= render :partial => "repositories/sidebar" %>
      </div>
      <div class="span9">
        <div class="record-pane">
          <h2><%= @repository.id %>  <span class="label label-info"><%= I18n.t("repository._singular") %></span></h2>
          <br/>

          <%= render :partial => "repositories/form_container", :locals => {:form => form} %>

          <div class="form-actions">
            <button type="submit" class="btn btn-primary"><%= I18n.t("actions.save_prefix") %> <%= I18n.t("repository._singular") %></button>
            <%= link_to I18n.t("actions.cancel"), :back, :class => "btn btn-cancel" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
