<%= setup_context :object => JSONModel(:repository).new(@repository['repository']), :title => @repository.repository['name'] %>

<%= form_for @repository, :as => "repository", :url => {:action => :update}, :html => {:class => 'form-horizontal aspace-record-form'}.merge(update_monitor_params(@repository)) do |f| %>
  <%= form_context :repository, @repository do |form| %>
    <div class="row">
      <div class="col-md-3">
        <%= render_aspace_partial :partial => "repositories/sidebar" %>
      </div>
      <div class="col-md-9">
        <%= render_aspace_partial :partial => "repositories/toolbar" %>
        <div class="record-pane">
          <%= link_to_help :topic => "repository" %>
          <h2><%= @repository.repository['name'] %>  <span class="label label-info"><%= t("repository._singular") %></span></h2>
          <br/>

          <%= render_aspace_partial :partial => "repositories/form_container", :locals => {:form => form} %>

          <div class="form-actions">
            <button type="submit" class="btn btn-primary"><%= t("repository._frontend.action.save") %></button>
            <%= link_to t("actions.cancel"), :back, :class => "btn btn-cancel btn-default" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
