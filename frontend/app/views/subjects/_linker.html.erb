<%
  resolved_obj = form.resolved_obj
  
  if resolved_obj.nil?
     selected_json = "{}"
  elsif resolved_obj.is_a?(String)
    selected_json = JSON(resolved_obj).to_json
  else
    selected_json = Subject.from_hash(resolved_obj).to_json
  end

  data_path = form.path
  data_name = "ref" # De-referenced by the controller if the schema def calls for an item array
%>

<hr/>
<div class="control-group">
   <label class="control-label">Subject</label>
   <div class="controls">
       <div class="input-append linker-wrapper">
          <input type="text" class="linker"
            id="<%= form.id_for(data_name) %>"
            data-label="Subject"
            data-label_plural="Subjects"
            data-path="<%= data_path %>"
            data-name="<%= data_name %>"
            data-url="<%= url_for :controller => :search, :action => :do_search, :format => :json %>"
            data-selected='<%= selected_json %>'
            data-format_template_id="linker_subject_template"
            data-multiplicity="one"
            data-sortable="true"
            data-types='["subject"]'
          />
          <div class="btn-group">
             <a class="btn dropdown-toggle last" data-toggle="dropdown" href="javascript:void(0);"><span class="caret"></span></a>
              <ul class="dropdown-menu">
                 <%# <li><a href="javascript:void(0);" class="linker-browse-btn">Browse</a></li> %>
                 <li><a href="javascript:void(0);" data-target="<%= url_for :controller => :subjects, :action => :new, :inline => true %>" class="linker-create-btn">Create</a></li>
              </ul>
          </div>
       </div>
   </div>
</div>
