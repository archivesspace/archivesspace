<%= setup_context :object => @subject %>

<%= form_for @subject, :as => "subject", :url => {:action => :create}, :html => {:class => 'form-horizontal'} do |f| %>
  <%= form_context :subject, @subject do |form| %>
    <div class="row-fluid">
      <div class="span3">
        <%= render :partial => "sidebar" %>
      </div>
      <div class="span9">
        <%= render :partial => "shared/toolbar_new_records" %>
        <div class="record-pane">
          <h2><%= I18n.t("actions.new_prefix") %> <%= I18n.t("subject._singular") %>  <span class="label label-info"><%= I18n.t("subject._singular") %></span></h2>
          <br/>
          <%= render :partial => "subjects/form", :locals => {:form => form} %>
          <div class="form-actions">
            <div class="btn-group">
              <button type="submit" class="btn btn-primary"><%= I18n.t("actions.save_prefix") %> <%= I18n.t("subject._singular") %></button>
              <button type="submit" name="plus_one" class="btn btn-primary"><%= I18n.t("actions.save_plus_one") %></button>
            </div>
            <%= link_to I18n.t("actions.cancel"), :back, :class => "btn btn-cancel" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
