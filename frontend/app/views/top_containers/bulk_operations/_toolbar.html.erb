<div class="record-toolbar bulk-operation-toolbar">
  <div class="btn-toolbar pull-right">
    <%= link_to t("actions.export_csv"), request.parameters.merge({ :format => :csv, :fields =>
        fields }), class: "searchExport btn btn-sm btn-info pull-right" %>
    <div class="bulk-actions pull-right" class="btn-group">
      <% if user_can?('manage_container_record') %>
      <a class="btn btn-sm btn-default dropdown-toggle" data-toggle="dropdown" href="#">
        <%= t("top_container._frontend.bulk_operations.title") %>
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu pull-right">
        <li><a id="bulkActionUpdateIlsHolding" href="javascript:void(0)"><%= t("top_container._frontend.bulk_operations.update_ils_holding_ids")%></a></li>
        <li><a id="bulkActionUpdateContainerProfile" href="javascript:void(0)"><%= t("top_container._frontend.bulk_operations.update_container_profiles")%></a></li>
        <li><a id="bulkActionUpdateLocation" href="javascript:void(0)"><%= t("top_container._frontend.bulk_operations.update_locations_singular")%></a></li>
        <li><a id="bulkActionUpdateMultipleLocation" href="javascript:void(0)"><%= t("top_container._frontend.bulk_operations.update_locations_multiple")%></a></li>
        <li><a id="showBulkActionRapidBarcodeEntry" href="javascript:void(0);"><%= t("top_container._frontend.bulk_operations.rapid_barcode_entry")%></a></li>
        <li><a id="showBulkActionRapidIndicatorEntry" href="javascript:void(0);"><%= t("top_container._frontend.bulk_operations.rapid_indicator_entry")%></a></li>
        <li><a id="bulkActionMerge" href="javascript:void(0)"><%= t("top_container._frontend.bulk_operations.batch_merge")%></a></li>
        <li><a id="bulkActionDelete" href="javascript:void(0)"><span class="text-error"><%= t("top_container._frontend.bulk_operations.batch_delete")%></a></li>
      </ul>
      <% end %>
    </div>
  </div>
  <div class="clearfix"></div>
</div>
