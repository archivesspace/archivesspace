<%
  form_target = {:controller => :top_containers, :action => :bulk_operations} if form_target.nil?
%>
<div class="row bulk-operations-search-criteria">
  <div class="col-md-12">
    <%= render_aspace_partial :partial => "shared/flash_messages" %>
  </div>

  <div class="col-md-12" style="padding: 30px;">
    <h3><%= t("top_container._plural") %></h3>
    <%= form_tag(form_target, {:class => "form-horizontal", :id => "bulk_operation_form"}) do |f| %>
      <div class="form-group row">
        <label class="control-label col-sm-2 text-right" for="q"><%= t("top_container._frontend.bulk_operations.keyword_criteria") %></label>
        <div class="controls col-sm-8">
          <%= text_field_tag "q", params["q"], :class => "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <label class="control-label col-sm-2 text-right" for="barcodes"><%= t("top_container._frontend.bulk_operations.barcodes_criteria") %></label>
        <div class="controls col-sm-8">
          <%= text_field_tag "barcodes", params["barcodes"], :class => "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <label class="control-label col-sm-2 text-right" for="collection_resource"><%= t("top_container._frontend.bulk_operations.collection_resource_singular") %></label>
        <div class="controls col-sm-8">
          <%= render_aspace_partial :partial => "top_containers/bulk_operations/collection_resource_linker" %>
        </div>
      </div>
      <div class="form-group row">
        <label class="control-label col-sm-2 text-right" for="collection_accession"><%= t("top_container._frontend.bulk_operations.collection_accession_singular") %></label>
        <div class="controls col-sm-8">
          <%= render_aspace_partial :partial => "top_containers/bulk_operations/collection_accession_linker" %>
        </div>
      </div>
      <div class="form-group row">
        <label class="control-label col-sm-2 text-right" for="container_profile"><%= t("container_profile._singular") %></label>
        <div class="controls col-sm-8">
          <%= render_aspace_partial :partial => "top_containers/bulk_operations/container_profile_linker" %>
        </div>
      </div>
      <div class="form-group row">
        <label class="control-label col-sm-2 text-right" for="location"><%= t("location._singular") %></label>
        <div class="controls col-sm-8">
          <%= render_aspace_partial :partial => "top_containers/bulk_operations/location_linker" %>
        </div>
      </div>
      <div class="form-group row">
        <label class="control-label col-sm-2 text-right" for="exported"><%= t("top_container.exported_to_ils") %></label>
        <div class="controls col-sm-4">
          <select name="exported" id="exported" class="form-control"><option></option><option value="yes"><%= t("top_container._frontend.bulk_operations.exported_to_ils_true") %></option><option value="no"><%= t("top_container._frontend.bulk_operations.exported_to_ils_false") %></option></select>
        </div>
      </div>
      <div class="form-group row">
        <label class="control-label col-sm-2 text-right" for="empty"><%= t("top_container._frontend.bulk_operations.empty") %></label>
        <div class="controls col-sm-4">
          <select name="empty" id="empty" class="form-control"><option></option><option value="yes"><%= t("top_container._frontend.bulk_operations.empty_true") %></option><option value="no"><%= t("top_container._frontend.bulk_operations.empty_false") %></option></select>
        </div>
      </div>
      <div class="form-group row">
        <label class="control-label col-sm-2 text-right" for="has_location"><%= t("top_container.has_location") %></label>
        <div class="controls col-sm-4">
          <select name="has_location" id="has_location" class="form-control"><option></option><option value="yes"><%= t("top_container._frontend.bulk_operations.has_location_true") %></option><option value="no"><%= t("top_container._frontend.bulk_operations.has_location_false") %></option></select>
        </div>
      </div>
      <div class="form-group row pt-3">
        <%= submit_tag t("top_container._frontend.bulk_operations.search"), :class => "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
