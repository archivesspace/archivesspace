<% define_template "deaccession", jsonmodel_definition(:deaccession) do |form| %>
  <div class="subrecord-form-fields">
    <%= form.label_and_select "scope",  form.possible_options_for("scope") %>
    <%= form.label_and_textarea "description" %>
    <%= form.label_and_textarea "reason" %>
    <%= form.label_and_textarea "disposition" %>
    <%= form.label_and_boolean "notification", {}, form.default_for("notification") %>

    <div class="subrecord-form-container">
      <section id="deaccession_date" class="subrecord-form">
        <h4>
          <%= I18n.t("deaccession.dates") %>
          <%= link_to_help :topic => "deaccession_deaccession_date" %>
        </h4>
        <div class="subrecord-form-container">
          <%= form.fields_for(form.obj["date"] || {"label" => "deaccession"}, "date") do | date | %>
            <% render :partial => "dates/template", :formats => [:html], :handlers => [:erb], :locals => {:form => form} %>
            <% form.emit_template("date") %>
          <% end %>
        </div>
      </section>
    </div>

    <div class="subrecord-form-container">
      <%= render :partial => "shared/subrecord_form", :formats => [:html], :handlers => [:erb], :locals => {:form => form, :name => "extents", :heading_size => "h4", :help_topic => "deaccession_extents"} %>
    </div>
  </div>
<% end %>
