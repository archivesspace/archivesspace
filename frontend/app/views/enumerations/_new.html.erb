<%= form_for @enumeration, :as => "enumeration", :url => {:action => :create, :id => JSONModel(:enumeration).id_for(@enumeration["uri"])}, :html => {:class => 'form-horizontal', :id => "new_enumeration"} do |f| %>
  <%= form_context :enumeration, @enumeration do |form| %>
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">Ã—</button>
      <h3><%= I18n.t("actions.create") %> <%= I18n.t("enumeration._singular") %></h3>
    </div>
    <div class="modal-body">
      <%= render :partial => "shared/form_messages", :locals => {:form => form} %>
      <fieldset>
        <div class="control-group required">
          <label class="control-label" for="enum_selector"><%= I18n.t("enumeration.name") %></label>
          <div class="controls label-only">
            <%= @enumeration["name"] %>
            <%= form.hidden_input :name %>
          </div>
        </div>
        <div class="control-group required">
          <label class="control-label" for="enum_selector"><%= I18n.t("enumeration.value") %></label>
          <div class="controls">
            <%= form.textfield :value %>
          </div>
        </div>
      </fieldset>
    </div>
    <div class="modal-footer">
      <input class="btn btn-primary" type="submit" name="commit" value="<%= I18n.t("actions.create") %> <%= I18n.t("enumeration._singular") %>" />
      <button class="btn btn-cancel" data-dismiss="modal"><%= I18n.t("actions.cancel") %></button>
    </div>
  <% end %>
<% end %>

<script>
  $('form#new_enumeration').ajaxForm({
    beforeSubmit: function() {
      $(".btn-primary", 'form#new_enumeration').attr("disabled","disabled");
    },
    success: function(response, status, xhr) {
      if (response === "Success") {
        document.location.reload(true);
      } else {
        $('form#new_enumeration').replaceWith(response);
      }
    },
    error: function(obj, errorText, errorDesc) {
      $(".btn-danger", 'form#new_enumeration').removeAttr("disabled");
    }
  });
</script>
