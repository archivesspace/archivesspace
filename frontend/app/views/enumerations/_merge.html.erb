<%= form_for @enumeration, :as => "enumeration", :url => {:action => :merge, :id => JSONModel(:enumeration).id_for(@enumeration["uri"])}, :html => {:class => 'form-horizontal aspace-record-form', :id => "merge_enumeration"} do |f| %>
  <%= form_context :enumeration, @enumeration do |form| %>
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">Ã—</button>
          <h3>
              <%= I18n.t("enumeration._frontend.action.merge_value") %>
          </h3>
        </div>
        <div class="modal-body">
          <%= render_aspace_partial :partial => "shared/form_messages", :locals => {:form => form} %>
          <fieldset>
            <div class="form-group required">
              <label class="control-label" for="enum_selector"><%= I18n.t("enumeration.name") %></label>
              <div class="controls label-only">
               <%= @enumeration["name"] %>
               <%= form.hidden_input :name %>
              </div>
           </div>
           <div class="form-group required">
               <label class="control-label" for="enum_selector"><%= I18n.t("enumeration.value") %></label>
               <div class="controls label-only">
                   <%= I18n.t("enumerations.#{@enumeration["name"]}.#{@value}", :default => @value) %>
                   <%= form.hidden_input :value, @value %>
               </div>
           </div>
           <div class="form-group required">
               <label class="control-label" for="enum_selector"><%= I18n.t("enumeration.merge_into") %></label>
               <div class="controls">
                   <%= select_tag "merge_into", options_for_select(@enumeration["values"].reject{|v| v === @value}.map{|v| [I18n.t("enumerations.#{@enumeration["name"]}.#{v}", :default => v), v]}, @merge) %>
               </div>
           </div>
        </fieldset>
      </div>
      <div class="modal-footer">
        <button class="btn btn-default" type="submit" name="commit"><%= I18n.t("enumeration._frontend.action.merge_value") %></button>
        <button class="btn btn-cancel btn-default" data-dismiss="modal"><%= I18n.t("actions.cancel") %></button>
      </div>
    </div>
  </div>
  <% end %>
<% end %>

<script>
  $('form#merge_enumeration').ajaxForm({
    beforeSubmit: function() {
      $(".btn-danger", 'form#merge_enumeration').attr("disabled","disabled");
    },
    success: function(response, status, xhr) {
      if (response === "Success") {
        document.location.reload(true);
      } else {
        $('form#merge_enumeration').replaceWith(response);
      }
    },
    error: function(obj, errorText, errorDesc) {
      $(".btn-danger", 'form#merge_enumeration').removeAttr("disabled");
    }
  });
</script>
