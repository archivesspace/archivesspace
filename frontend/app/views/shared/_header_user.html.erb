<% username = session[:user] ? CGI::escapeHTML(session[:user]) : nil %>

<% if session[:user] %>
  <% if @repositories.length > 0 %>
    <li class="dropdown select-a-repository">
      <button class="dropdown-toggle btn" style="padding: .875rem;" data-toggle="dropdown"><%= t("repository._frontend.action.select") %> <b class="caret"></b></button>
      <ul class="dropdown-menu dropdown-menu-right" style="padding: 15px;">
        <li class='dropdown-item'>
          <%= form_tag({:controller => :repositories, :action => :select}) do |f| %>
            <fieldset>
              <label for="id" class="sr-only"><%= t('repository._frontend.action.select') %></label>
              <%= select_tag "id", options_for_select(@repositories.map {|repo| [repo.repo_code, repo.id]}, session[:repo_id]), :class=>"form-control" %>
            </fieldset>
            <br />
            <button class="btn btn-primary float-xs-left"><%= t("repository._frontend.action.select") %></button>
          <% end %>
        </li>
      </ul>
    </li>
  <% end %>
  <li class="dropdown system-menu">
    <button class="dropdown-toggle btn" style="padding: .875rem;" data-toggle="dropdown"><%= t("navbar.global_admin") %> <b class="caret"></b></button>
    <ul class="dropdown-menu dropdown-menu-right">
      <% if user_can?('update_enumeration_record') %>
        <li class='dropdown-item'><%= link_to t("navbar.manage_enumerations"), :controller => :enumerations, :action => :index %></li>
      <% end %>
      <% if user_can?('update_container_profile_record') %>
        <li class='dropdown-item'><%= link_to t("navbar.manage_container_profiles"), :controller => :container_profiles, :action => :index %></li>
      <% end %>
      <% if user_can?('manage_location_profile_record')%>
        <li class='dropdown-item'><%= link_to t("navbar.manage_location_profiles"), :controller => :location_profiles, :action => :index %></li>
      <% end %>

      <% if user_can?('update_enumeration_record') || user_can?('update_container_profile_record') || user_can?('manage_location_profile_record') %>
        <li class="dropdown-divider"></li>
      <% end %>

      <% if user_can?('create_repository') %>
        <li class='dropdown-item'><%= link_to t("navbar.repositories_manage"), {:controller => :repositories, :action => :index} %></li>
      <% end %>
      <% if user_can?('create_repository') %>
        <li class='dropdown-item'><%= link_to t("navbar.oai_config"), {:controller => :oai_config, :action => :edit} %></li>
      <% end %>
      <% if user_can?('manage_users') %>
        <li class='dropdown-item'><%= link_to t("navbar.manage_users"), :controller => :users, :action => :create %></li>
      <% end %>
      <% if user_can?('create_repository') || user_can?('manage_users') %>
        <li class='dropdown-item'><%= link_to t("navbar.system_info"), :controller => :system_info, :action => :show %></li>
        <li class="dropdown-divider"></li>
      <% end %>

      <% if ArchivesSpaceHelp.enabled? %>
        <li class='dropdown-item'><%= link_to_help :label => t("help.help_center") %></li>
      <% end %>
    </ul>
  </li>

  <% if Plugins.system_menu_items.any? {|plugin| has_permission_for_controller?(session, plugin)} %>
    <li class="dropdown plugin-container">
      <button class="dropdown-toggle btn" style="padding: .875rem;" data-toggle="dropdown"><%= t("navbar.plugins") %> <b class="caret"></b></button>
      <ul class="dropdown-menu dropdown-menu-right">
        <% Plugins.system_menu_items.each do |plugin| %>
          <% if has_permission_for_controller?(session, plugin) %>
            <li class='dropdown-item'><%= link_to t("plugins.#{plugin}.label"), :controller => plugin.intern, :action => :index %></li>
          <% end %>
        <% end %>
      </ul>
    </li>
  <% end %>

  <li class="user-container d-flex align-items-center">
    <div class="btn-group align-items-center">
      <% link_content = "<span class='glyphicon glyphicon-user'></span>&nbsp;<span class='user-label'>#{session[:user]}</span>" %>
      <%= link_to(link_content.html_safe, {:controller => :users, :action => :edit_self}, {:class => 'btn btn-default'}) %>
      <button class="btn btn-default dropdown-toggle last" id="user-menu-dropdown" data-toggle="dropdown" title="<%= t("navbar.global_settings") %>" aria-label="<%= t("navbar.global_settings") %>"><span class="caret"></span></button>
      <ul class="dropdown-menu dropdown-menu-right float-xs-right">
        <li class='dropdown-item'><%= link_to t("navbar.global_preferences") + " (#{username})", :controller => :preferences, :action => :edit, :id => 0, :global => true %></li>
        <li class='dropdown-item'><%= link_to t("navbar.user_repo_preferences") + " (#{username})", :controller => :preferences, :action => :edit, :id => 0 %></li>
        <% if user_can?('administer_system') || user_can?('manage_repository') %>
          <li class='dropdown-item'><%= link_to t("navbar.repo_preferences"), :controller => :preferences, :action => :edit, :id => 0, :repo => true %></li>
        <% end %>
        <li class="dropdown-divider"></li>
        <% if user_can?('become_user') %>
          <li class='dropdown-item'><%= link_to t("navbar.become-user"), :controller => "session", :action => "select_user" %></li>
        <% end %>
        <li class='dropdown-item'><%= link_to(t('user._frontend.action.update_self'), {:controller => :users, :action => :edit_self}) %></li>
        <li class='dropdown-item'><%= link_to t("navbar.logout"), :controller => "session",:action => "logout"%></li>
      </ul>
    </div>
  </li>
<% end %>
