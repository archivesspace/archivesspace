        <% end %>
      <% end %>
      <%= form.label_and_textarea 'review_note' %>

      <hr>

      <%= form.label_and_textarea 'purpose' %>
      <%= form.label_and_textarea 'scope' %>
      <%= form.label_and_boolean 'sensitive_material' %>

      <hr>

      <%= form.label_and_boolean 'inactive' %>
    </fieldset>
  </section>

