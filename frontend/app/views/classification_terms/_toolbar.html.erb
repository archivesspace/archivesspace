<% if user_can?('update_classification_record') %>
  <%= render_aspace_partial(:partial => '/shared/component_toolbar',
             :locals => {
               :parent_link => {:controller => :classifications, :action => :edit, :id => JSONModel(:classification).id_for(@classification_term.classification["ref"]), :anchor => "classification_term_#{@classification_term.id}"},
               :record => @classification_term,
               :suppressible => false,
               :supports_events => false,
               :show_delete => user_can?('delete_classification_record')
              })
  %>
<% elsif user_can_view_only?('classification_term') %>
  <%= render_aspace_partial(:partial => '/shared/component_toolbar',
             :locals => {
               :record => @classification_term,
               :view_only => true
              })
  %>
<% end %>
