<div class="record-toolbar">
    <div class="btn-toolbar pull-right">
      <div class="btn-group">
        <div class="btn btn-inline-form">
          <button class="btn btn-sm btn-check" type="button" id="check_all"><%="Check all/Uncheck all"%></button>
          <% if !['new', 'create', 'copy'].include?(controller.action_name) %>
            <%= link_to I18n.t("actions.copy"), {:controller => :custom_report_templates, :action => :copy, :id =>  @custom_report_template.id}, :class => "btn btn-sm btn-copy" %>
            <%= button_delete_action url_for(:controller => :custom_report_templates, :action => :delete, :id => @custom_report_template.id ), { :"data-title" => I18n.t("actions.delete_confirm_title", :title => @custom_report_template.name) } unless @custom_report_template.id.nil? %>
          <% end %>
        </div>
      </div>
    </div>
  <div class="clearfix"></div>
</div>
