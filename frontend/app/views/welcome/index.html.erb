<%= setup_context :title => "Home", :suppress_breadcrumb => true %>

<div class="row">
  <div class="col-md-12">
    <%= render_aspace_partial :partial => "shared/flash_messages" %>
  </div>
</div>

<div class="row py-5">
  <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-0 col-lg-4 lg-min-w-450px p30px">
    <h2><%= t "welcome.heading" %></h2>
    <%= welcome_message %>
  </div>
  <% if !session[:user] %>
  <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-0 col-lg-4 md-mt20px p30px card bg-light">
    <main id="login-form-wrapper">
      <h3 class="mt0"><%= I18n.t "login.login_please" %></h3>
      <%= render_aspace_partial :partial => "shared/login" %>
      <% if AppConfig[:allow_user_registration] %>
        <p><%= t "navbar.register_prefix" %> <%= link_to t("navbar.register"), {controller: "users", action: "new"}, class: "boring-link" %></p>
      <% end %>
      <% if AppConfig[:allow_password_reset] %>
        <p><%= t("login.lost_password") %> <%= link_to t("login.reset_password"), {controller: "users", action: "password_form"}, class: "boring-link" %></p>
      <% end %>
    </main>
  </div>
  <% end %>
</div>
