<%
   section_id = "agent_topic" if section_id.blank?
   section_title = "Topics" if section_title.blank?
   heading_size = "h3" if heading_size.blank?
%>

<section id="<%= section_id %>">
  <h3><%= section_title %></h3>
  <div class="panel-group details" id="<%= section_id %>_accordion">
    <%= context.list_for(context["agent_topics"], "agent_topics[]") do |agent_topic, index| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="row accordion-toggle collapsed" data-toggle="collapse" data-parent="#<%= section_id %>_accordion" href="#<%= section_id %>_agent_topic_<%= index %>">
            <div class="col-md-1">
              <span class="glyphicon"></span>
            </div>
            <div class="col-md-6">
              <%= render_aspace_partial :partial => "subjects/show_inline_abbr", :locals => {:subjects => agent_topic['subjects']} %>
            </div>
          </div>
        </div>
        <div id="<%= section_id %>_agent_topic_<%= index %>" class="panel-collapse collapse">
          <% if agent_topic["subjects"].length > 0 %>
            <%= render_aspace_partial :partial => "subjects/show_inline", :locals => {:subjects => agent_topic['subjects'], :section_id => "agent_topic_subjects_", :section_title => t("agent_topic.subjects"), :heading_size => "h4"} %>
          <% end %>

          <% if agent_topic["places"].length > 0 %>
            <%= render_aspace_partial :partial => "subjects/show_inline", :locals => {:subjects => agent_topic['places'], :section_id => "agent_topic_places_", :section_title => t("agent_topic.places"), :heading_size => "h4"} %>
          <% end %>

          <% if agent_topic["dates"].length > 0 %>
            <%= render_aspace_partial :partial => "structured_dates/show", :locals => { :dates => agent_topic['dates'], :section_id => "agent_topic_dates", :section_title => t("agent_topic.dates"), :heading_size => "h4"} %>
          <% end %>

          <% if agent_topic["notes"].length > 0 %>
            <%= render_aspace_partial :partial => "notes/show", :locals => { :notes => agent_topic["notes"], :section_id => "#{@agent.agent_type}_agent_topic__#{index}__notes_", :context => context, :heading_size => "h4" } %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</section>
