# frozen_string_literal: true

source 'https://rubygems.org'

gem 'rails', '~> 5.2'
gem 'i18n', '< 1.0'

gem 'sprockets-rails', '2.3.3'

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem 'tzinfo-data', platforms: %i[mingw mswin x64_mingw jruby]

# Gems used only for assets and not required
# in production environments by default.
gem 'coffee-rails', '4.2.2'
gem 'coffee-script'
gem 'coffee-script-source'
gem 'sass-rails', '~> 5.0', '>= 5.0.6'
gem 'therubyrhino'
gem 'uglifier'

gem 'less-rails-bootstrap'

gem 'jquery-rails'
gem 'jquery-ui-rails'
gem 'json'
gem 'json-schema', '1.0.10'

gem 'atomic', '= 1.0.1'
gem 'jruby-jars', '= 9.2.20.1'

group :test do
  gem 'rails-controller-testing'
  gem 'axe-core-rspec'
  gem 'dumb_delegator', '~> 0.8'
  gem 'rspec'
  # For performance testing
  gem 'rspec-benchmark'
  gem 'rspec-rails'
  gem 'simplecov'

  # selenium stuff
  gem 'factory_bot_rails'
  gem 'mechanize'
  gem 'parallel_tests', '~> 2.14.0'
  gem 'rspec-retry'
  gem 'selenium-webdriver', '~> 3.142', '>= 3.142.3'

  gem 'capybara'
  # need access to ActiveSupport for helpers
  gem 'activesupport'
  # if the indexer requires it, our test suite requires it
  gem 'fog-aws', '2.0.0', require: false
end

group :development, :test do
  gem 'pry-debugger-jruby', '>= 1.2.2'
  gem 'pry-nav'
  gem 'pry-rails'
  gem 'mizuno-aspace'
end

group :development do
  gem 'web-console'
end

gem 'multi_json', '~> 1.15.0'
gem 'multipart-post', '1.2.0'
gem 'net-http-persistent', '>= 4.0.1'

gem 'nokogiri', '>= 1.10.8'

require 'asutils'

# Allow plugins to provide their own Gemfiles too.
ASUtils.load_plugin_gems(self)

gem "zxcvbn-ruby", "~> 1.2"
