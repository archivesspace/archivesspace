<div id="main-content" class="row">

  <div class="information col-sm-9">
    <%= render partial: 'shared/idbadge', locals: {:result => @result, :props => { :full => true} } %>
    <div class="clear">
    <span class="inline-label clear"><%= t('subject_source') %>: </span><%= t("enumerations.subject_source.#{@result['json']['source']}" ) %> 
    </div>


<br/>
    <% if !@result['json']['extents'].blank? %>
    <%   @result['json']['extents'].each do |ext| %>
    <span class="extent"><%= ext['number'] %> <%= ext['extent_type'] %></span>
    <% end %>
    <br/>
    <% end %>
    <% if !@result['json']['dates'].blank? %>
    <%   @result['json']['dates'].each do |date|  %>
    <span class="dates"><%= (!date['label'].blank? ? "#{date['label'].titlecase}: " : '') %><%= date['expression'] %></span>
    <% end %>
    <br/>
    <% end %>

  <% if !@result['json']['component_id'].blank? %>
    <span class='component'>Component: <%= @result['json']['component_id'] %></span>
    <% end %>
    <% if !@result['json']['ref_id'].blank? %>
    <span class='ref_id'>[Ref. ID: <%= @result['json']['ref_id'] %>]</span>
    <% end %>

    <%= render partial: 'shared/display_notes' %>
  <% if !@results.blank? && @results['total_hits'] > 0 %>
     <h3><%= t('found') %> <%= @results['total_hits'] %> <%= (@results.length == 1? t('resource._singular') : t('resource._plural')) %>:</h3>
         <% @results['results'].each do |result| %>
           <%= render partial: 'shared/result', locals: {:result => result, :props => {:full => false}} %>
         <% end %>
         <%= render partial: 'shared/pagination', locals: {:pager  => @pager}  %>

   <% end %>

   </div>
  <div id="sidebar" class="col-sm-3 sidebar sidebar-container">
   <h4><%= t('more_about') %> '<%= strip_mixed_content(@result['json']['display_string'] || @result['title'])%>'</h4>
   <% if !@result['json']['terms'].blank? %>

      <h5><%= t('subject_term_type') %> </h5>
      <dl>
    <%    @result['json']['terms'].each do |term|  %>
         <dt><%= t("enumerations.subject_term_type.#{term['term_type']}") %></dt>
         <dd><%= term['term'] %></dd>
       <% end %>
       </dl>
   <% end %>
   <%= render partial: 'shared/facets' %>
  </div>
</div>
