<html>
    <head>
        <meta charset="utf-8" />

        <style>

 body {
     font-family: <%= AppConfig[:pui_pdf_font_name] %>;
 }

.title-page {
     page-break-after: always;
     position: relative;
     height: 58em;
 }

 .toc-page {
     page-break-after: always;
 }

span.title {
  font-style: italic;
}

.title {
}

 div.logo {
     display: block;
     width: 100%;
     height: 250px;
     background-repeat: no-repeat;
     background-size: 100% auto; 
     background-origin: content-box;
     background-position: 50% 50%;
 }

 .logo img {
    width: 200px;
 }

 ul.toc {
     list-style-type: none;
     margin-left: 0;
     padding-left: 0;
 }

 a {
     color: #3333FF;
 }

 .toc .level-1 { padding-left: 1em; }
 .toc .level-2 { padding-left: 2em; }
 .toc .level-3 { padding-left: 3em; }
 .toc .level-4 { padding-left: 4em; }
 .toc .level-5 { padding-left: 5em; }
 .toc .level-6 { padding-left: 6em; }
 .toc .level-7 { padding-left: 7em; }
 .toc .level-8 { padding-left: 8em; }
 .toc .level-9 { padding-left: 9em; }
 .toc .level-10 { padding-left: 10em; }

 .toc a {
     color: black;
     text-decoration: none;
 }

 a.record-title {
     color: black;
     font-weight: bold;
 }

 div.ao-summary {
    /* float: left;
    text-align: left;
    width: 700px; */
 }
 .ao-summary a.record-title {
     color: black;
     font-weight: normal; 
     font-size: 100%;
 }

 .container-information {
     font-size: 75%;
     text-align: right;
     color: black;
     display: block;
     float: right;
     width: 60%;
 }

 .first-post .container-information {
    margin-top: 30px;
    margin-bottom: 20px;
    background-color: #eee;
 }

 .container-information .box-area {
    float: right;
 }

 h3 {
     margin-top: 1em;
     border-top: 5px #000 solid;
     border-bottom: 1px #000 dotted;
     padding: 10px;
     margin-left: -10px;
 }

 h3 + p {
    margin-left: 20px;
 }

 div#note-prefercite {
    border: 2px #000 solid;
    padding: 5px;
 }

 table.collection-inventory-header {
    background-color: #fafafa;
    font-weight: bold;  
    width: 102%;
    margin-top: 20px;
    margin-bottom: -10px;
    margin-left: -10px;
    margin-right: -10px;
    border-top: 1px solid #aaa;
    border-bottom: 1px solid #aaa;
    font-size: 75%;
    padding-left: 5px;
    padding-right: 10px;
 }

 table.collection-inventory-header td.title {
    width: 50%;
    text-align: left;
 }

 table.collection-inventory-header td.instance {
    width: 50%;
    text-align: right;
 }

 dl {
     overflow: hidden;
 }

 dt, dd { float: left; margin: 0; margin-top: 0.5em; }
 dt { clear: both; font-weight: bold; width: 20%; text-align: right; margin-right: 1em; }
 dd { width: 70%; }

 .title-block {
     /* border-bottom: solid 2px black; */
 } 

 div.bioghist dl {
    width: 800px;
 }

 div.bioghist dt {
    float: left;
    width: 150px;
 }

 div.bioghist dd {
    float: left;
    width: 500px;
    margin-left: 150px;
 }

 div.title-text-block p {
    margin: 0;
 }

 .title-block h2 {
     border: 0;
 }

 .title-page .repository-information {
     position: absolute;
     bottom: 0;
     width: 95%;
     padding: 1em;
 }

 .repository-information > * {
     padding-left: 1em;
 }

 .repository-information > .repository-name {
     padding-left: 0;
 }

 .repository-address {
    line-height: 5px;
 }

 h2 {
     padding-top: 0.25em;
     padding-bottom: 0.25em;
     border-top: solid 2px #333;
     border-bottom: dotted 1px #333;
 }

 ul.toc a::after {
     content: leader('.') target-counter(attr(href), page);
 }

 .print-record-border {
     padding-left: 0.5em;
     /* border: 1px solid #f00; */
     /* margin: 0; /*

     /* Get rid of annoying vertical whitespace */
     /* margin-top: -8px; */
     /* padding-top: 8px; */
     /* padding-bottom: 10px !important; */
 }

 .avoid-break {
     margin-top: 10px;
     break-inside: avoid;
     page-break-inside: avoid;
 }

 .print-record {
     margin-bottom: 1em;
     display: block;
     border-top: solid 1px #dedede;
     padding-top: 10px;
     padding-bottom: 20px;
 }

 .print-record-border.print-record.level-1 { padding-top: 0; margin-top: 1em; }

 .print-record-border.level-1 { margin-left: 1em; display: block; margin: 5px; }
 .print-record-border.level-2 { margin-left: 1em; display: block; margin: 5px; }
 .print-record-border.level-3 { margin-left: 1em; display: block; margin: 5px; }
 .print-record-border.level-4 { margin-left: 1em; display: block; margin: 5px; }
 .print-record-border.level-5 { margin-left: 1em; display: block; margin: 5px; }
 .print-record-border.level-6 { margin-left: 1em; display: block; margin: 5px; }
 .print-record-border.level-7 { margin-left: 1em; display: block; margin: 5px; }
 .print-record-border.level-8 { margin-left: 1em; display: block; margin: 5px; }
 .print-record-border.level-9 { margin-left: 1em; display: block; margin: 5px; }
 .print-record-border.level-10 { margin-left: 1em; display: block; margin: 5px; }

 .print-record h3 {
     margin: 0;
 }

 .print-record h4 {
     margin: 1em 0 1em 0;
 }

 .print-record p {
     margin: 0;
 }

 .print-record dl {
     margin: 0 0 0.5em 0;
 }


 .italic {
     font-style: italic;
 }

 .inherit {
     font-style: italic;
 }

 .print-record-border a.record-title {
     color: black;
     font-weight: normal; 
 }

 .box-area {
    /* margin-top: 5px; */
    display: block;
    width: 250px;
 }

 .box-string {
    float: left;
    text-align: left;
    margin-right: 10px;
    overflow: scroll;
 }

 .folder-string {
    float: right;
    margin-left: 10px;
    overflow: scroll;
 }
 .first-post {
    background-color: #eee;
    padding-top: 10px;
    padding-bottom: 10px;
 }

 .print-record-border.first-post a.record-title {
    font-weight: bold !important;
 }

 .indented dl {
    margin-top: 10px;
    font-weight: normal !important;
    font-size: 75% !important;
    width: 40%;
 }

 .indented dt {
    font-weight: normal !important;
    text-decoration: underline;
 }

 .indented a {
    font-weight: normal !important;
    font-size: 75% !important;
 }

 }

 <%# Don't show headers/footers on the titlepage %>
 @page :first {
     @top-center {
         content: '';
     }

     @bottom-center {
         content: '';
     }
 }

 @page {
    <% if record.finding_aid['title'] %>
      <% short_title = record.finding_aid['title'] %>
    <% else %>
      <% short_title = record.display_string %>
    <% end %>

    <% short_title = CGI.unescapeHTML(strip_tags(short_title.gsub(/\n.*/, '').strip)) %>

     <% if short_title != '' %>
     @top-center {
         font-size: 80%;
         color: #666;
         content: '<%= short_title %>';
     }
     <% end %>

     @bottom-center {
         font-size: 80%;
         color: #666;
         content: '- Page ' counter(page) ' -';
     }
 }


        </style>
        <% ASUtils.find_local_directories('public/views/_pdf_header.html.erb').each do |template| %>
            <%= render(:file => template, :locals => {:record => record}) if File.exists?(template) %>
        <% end %>
    </head>
