<% pager_id ||= 'paging' %>
<% if pager && pager.pages.last > 1 %>
<div id="<%= pager_id %>">
  
  <ul class="pagination mb-0">
    <% if pager.need_prev %>
      <li class="previous page-item"><a class="page-link" href="<%= app_prefix(pager.link) %>&page=<%= pager.prev %>"><span aria-hidden="true">&larr;</span> <%= t 'actions.previous' %></a></li>
    <% end %>
    <% pager.pages.each do |page| %>
      <% if page == pager.page %>
        <li class="active page-item"><a class="page-link"  href="#"><%= page %></a></li>
      <% else %>
        <li class="page-item"><a class="page-link"  href="<%= app_prefix(pager.link) %>&page=<%= page %>"><%= page %></a></li>
      <% end %>
    <% end %>
    <% if pager.need_last %>
       <li><a class="page-link" href="" style="pointer-events: none;">...</a></li>
       <li><a class="page-link"  href="<%= app_prefix(pager.link) %>&page=<%= pager.last_page %>"><%=  pager.last_page %></a></li>
    <% end %>
    <% if pager.need_next %>
      <li class="next page-item"><a class="page-link"  href="<%= app_prefix(pager.link) %>&page=<%= pager.next %>"><%= t 'actions.next' %> <span aria-hidden="true">&rarr;</span></a></li>
    <% end %>
</ul>
</div>
<% end %>
