<section id="navigation">
  <nav class="navbar navbar-expand-lg navbar-light navbar-default bg-light p-0" aria-label="<%= I18n.t("navigation.top_level") %>">
      <button type="button" class="navbar-toggler m-2 ml-auto" data-toggle="collapse" data-target="#collapsemenu" aria-expanded="false" aria-controls="collapsemenu">
        <div class="container">
          <span class="sr-only"><%= t('navigation.mobile_menu') %></span>
          <span class="navbar-toggler-icon"></span>
        </div>
      </button>
      <div class="collapse navbar-collapse top-bar pl-4" id="collapsemenu">
        <ul class="navbar-nav mr-auto">
          <%# TODO: add class="active" if we're on that page %>
          <% $MAIN_MENU.each do |link| %>
            <li class="nav-item p-2">
              <a class="nav-link" href="<%= app_prefix(link[0]) %>"><%= t(link[1]) %></a>
            </li>
          <% end %>
          <% unless AppConfig[:pui_hide][:search_tab] %>
            <li class="nav-item p-2"><a class="nav-link" href="<%=  app_prefix('/search?reset=true') %>" title="<%= I18n.t('search_tab', :target => t('archive._plural'))%>">
                <span class="fa fa-search" aria-hidden="true"></span>
                <span class="sr-only"><%= I18n.t('search_tab', :target => t('archive._plural')) %></span>
              </a>
            </li>
          <% end %>
        </ul>

        <% if AppConfig[:pui_require_authentication] %>
          <li class="user-container d-flex align-items-center pr-4">
            <div class="btn-group align-items-center">
              <% if session[:username] %>
                <button type="button" class="btn btn--default dropdown-toggle" id="user-menu-dropdown" data-toggle="dropdown" title="<%= session[:username] %>">
                  <i class="fa fa-user"></i>
                  <%= session[:username] %>
                </button>
                <ul class="dropdown-menu dropdown-menu-right">
                  <li><%= link_to t("login.logout"), {:controller => "sessions",:action => "logout"}, :class => "dropdown-item" %></li>
                </ul>
              <% end %>
            </div>
          </li>
        <% end %>

      </div>
  </nav>
</section>
