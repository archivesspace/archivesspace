# frozen_string_literal: true

source 'https://rubygems.org'

gem 'rails', '6.1.6'

# For handling HTML enities when processing exports as XML
gem 'htmlentities'
gem 'i18n'
gem 'loofah'
gem 'rubyzip'

gem 'nokogiri'

gem 'sprockets-rails'

gem 'atomic', '= 1.0.1'

# use bootstrap's sass
gem 'bootstrap-sass'
# Use SCSS for stylesheets
gem 'sass-rails'
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier'
# Use font-awesome icons
gem 'font-awesome-sass', '4.7.0'

# Use CoffeeScript for .coffee assets and views
gem 'coffee-rails'
# See https://github.com/rails/execjs#readme for more supported runtimes
gem 'therubyrhino'
# Use jquery as the JavaScript library
gem 'jquery-rails'

gem 'excon', '>= 0.76.0'
gem 'json', '2.3.0'
gem 'json-schema', '1.0.10'
gem 'multipart-post', '1.2.0'
gem 'net-http-persistent', '2.8'

# support clipboard
gem 'clipboard-rails'

# Turbolinks makes navigating your web application faster. Read more: https://github.com/turbolinks/turbolinks
gem 'turbolinks'

# Enable support for `rails server`
gem 'listen', group: :development

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby]

group :development, :test do
  gem 'pry'
  gem 'pry-nav'
  gem 'pry-rails'
  gem 'pry-debugger-jruby'
  gem 'mizuno-aspace'
end

group :test do
  gem 'axe-core-rspec'
  gem 'capybara', '3.36.0'
  gem 'dumb_delegator'
  gem 'factory_bot_rails'
  gem 'fog-aws', '2.0.0', require: false
  gem 'launchy'
  gem 'rails-controller-testing'
  gem 'rspec'
  gem 'rspec-rails'
  gem 'rspec-retry'
  gem 'selenium-webdriver', '4.1.0'
  gem 'simplecov'
end

# Allow plugins to provide their own Gemfiles too.
require 'asutils'
ASUtils.load_plugin_gems(self)
