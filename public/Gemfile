# frozen_string_literal: true

source 'https://rubygems.org'

gem 'rails', '6.1.6'

# For handling HTML enities when processing exports as XML
gem 'htmlentities'
gem 'i18n'

gem 'nokogiri'

# Gems used only for assets and not required in production environments by default.
# Assets group was deprecated with Rails 4, but we still need it as we need to avoid using gems that include
# native extensions in production
group :assets do
  gem 'sprockets-rails'
  gem 'sassc-rails'
  gem 'sass-rails'
  # Use CoffeeScript for .coffee assets and views
  gem 'coffee-rails'
  # See https://github.com/rails/execjs#readme for more supported runtimes
  gem 'execjs'
end

gem 'atomic', '= 1.0.1'

# Use jquery as the JavaScript library
gem 'jquery-rails'

gem 'excon', '>= 0.76.0'
gem 'json'
gem 'json-schema', '1.0.10'
gem 'multipart-post', '~> 2.4.0'
gem 'net-http-persistent', '>= 4.0.1'

# support clipboard
gem 'clipboard-rails'

gem 'rubyzip', '< 1.4'

# Turbolinks makes navigating your web application faster. Read more: https://github.com/turbolinks/turbolinks
gem 'turbolinks'

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby]

group :development do
  gem 'web-console'
  gem 'pry'
  gem 'pry-nav'
  gem 'pry-rails'
  gem 'pry-debugger-jruby'
  gem 'listen'
end

group :development, :test do
  gem 'puma'
end

group :test do
  gem 'childprocess'
  gem 'axe-core-rspec'
  gem 'capybara'
  gem 'capybara-screenshot'
  gem 'dumb_delegator'
  gem 'factory_bot', '= 6.2.1'
  gem 'factory_bot_rails'
  gem 'fog-aws', '2.0.0', require: false
  gem 'launchy'
  gem 'rails-controller-testing'
  gem 'rspec'
  gem 'rspec-rails'
  gem 'rspec-retry'
  gem 'selenium-webdriver'
  gem 'simplecov'
end

# Allow plugins to provide their own Gemfiles too.
require 'asutils'
ASUtils.load_plugin_gems(self)
